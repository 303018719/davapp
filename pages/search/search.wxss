.content {
    flex-direction:column;
}
.fixed-search {
    width:100%;
    height:110rpx;
    box-sizing:border-box;
    font-size:28rpx;
    background:#e94828;
    align-items:center;
    justify-content:space-between;
}
.scroll-content {
    margin-top:110rpx;
}
.fixed-search .input {
    position:relative;
    width:570rpx;
    height:64rpx;
    background:#fff;
    border-radius:32rpx;
}
.fixed-search .input input {
    display:block;
    position:relative;
    z-index:2;
    height:100%;
    margin-left:240rpx;
}
.fixed-search .input image {
    position:absolute;
    left:190rpx;
    top:50%;
    margin-top:-15rpx;
    width:30rpx;
    height:30rpx;
}
.fixed-search .btn {
    width:120rpx;
    height:64rpx;
    padding:0;
    margin:0;
    line-height:64rpx;
    color:#e94828;
    font-size:30rpx;
    background:#fff;
    border-radius:32rpx;
}
.loc-content {
    flex:1;
    background:#f7f7fa;
}
.now-location,
.hot-city
 {  box-sizing: border-box;
    font-size:30rpx;
    
}
.now-location {
    height:124rpx;
}
.now-location,.hot-city {
    padding:30rpx 20rpx; 
}
.now-location .txt,
.hot-city .txt {
    width:164rpx;
    line-height:64rpx;
    text-align:center;
}
.now-location .txt text,
.hot-city .txt text {
    color:#e94828;
    line-height:64rpx;
}
.hot-city .list {
    width:548rpx;
}
.now-location .list text,
.hot-city .list text {
    float: left;
    padding:12rpx 40rpx;
    margin:0 20rpx;
    border-radius:20rpx;
    background:#fff;
}
.hot-city .list text {
    margin-bottom:28rpx;
}
.re-location {
    height:110rpx;
    line-height:110rpx;
    color:#fff;
    text-align:center;
    background:#e94828;
}
.re-location image {
    position:relative;
    top:4rpx;
    left:14rpx;
    width:40rpx;
    height:40rpx;
}